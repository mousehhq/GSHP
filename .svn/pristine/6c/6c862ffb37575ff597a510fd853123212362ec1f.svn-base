                let hotggArr = [];         
                let coldggArr = [];
                for (let item of data) {      
                    if(item.hot){ 
                        timeArr.push(item['time'] ? item['time'] : '');
                        hottuiArr.push(item['tui'] ? item['tui'] : '');
                        hottuoArr.push(item['tuo'] ? item['tuo'] : '');
                        hottgiArr.push(item['tgi'] ? item['tgi'] : '');
