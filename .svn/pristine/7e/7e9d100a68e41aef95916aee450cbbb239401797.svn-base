router.beforeEach((to, from, next) => {
    if (to.path.toLowerCase() === '/login') {  // 判断该路由是否需要登录权限
        next();
    }
    else {
        if (store.state.user) {  // 通过vuex state获取当前的token是否存在
            next();
        }
        else {
            next({
                path: '/login',
                query: {redirect: to.fullPath}  // 将跳转的路由path作为参数，登录成功后跳转到该路由
            })
        }
    }
});

new Vue({
    el: '#app',
    store,
    router,
    template: '<App/>',
    render: h => h(App),
    components: {App}
})

