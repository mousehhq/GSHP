        }},
        {
        gridIndex: 5,
        data: ['EER'],
        position:"top",
        boundaryGap: false,
        type: "category",
        axisLine:{
            show:false,
        },
        axisTick:{
            show:false
        }}
    ],
    yAxis: [{
        gridIndex: 0,
        show:false,
        data:dataY,
        splitArea: {
            "show":false
        },
        type: "category",
        },
        {
         gridIndex: 1,
        show:false,
        data: dataY,
        splitArea: {
            show:false
        },
        type: "category", 
        },
        {
         gridIndex: 2,
        show:false,
        data: dataY,
        splitArea: {
