       {text:'降序',value:'0'},
       {text:'升序',value:'1'}
     ],
     
     selected5:'0',
     options5:[
       {text:'降序',value:'0'},
       {text:'升序',value:'1'}
     ]
    }
  },
  mounted(){
    this.getParams();
  },
  methods:{
  getParams(){
      var self = this;
      var url = 'http://120.79.84.167:3000' + '/projects';
      self.$http.get(url)
          .then(function(response){
            if (response.status===200){
              self.getDatasList(response.data);
              self.drawParam();
            }
          })
  },
  getDatasList(data){
    let dataOrigin={};
    let tgo=[];
    let tg=[];
    let a=[];
    let n=[];
    let cop=[];
    let eer=[];
    for(let item of data){
        tgo.push(item.tgo);
        tg.push(item.tg);
        a.push(item.a);
        n.push(item.n);
        cop.push(item.cop);
        eer.push(item.eer);
    }
    dataOrigin.tgo=tgo;
    dataOrigin.tg=tg;
    dataOrigin.a=a;
    dataOrigin.n=n;
    dataOrigin.cop=cop;
    dataOrigin.eer=eer;
    this.dataOrigin=dataOrigin;
    console.log('length',this.dataOrigin);
  },

  bubbleSort(arr) {
    var len = arr.length;
    for (var i = 0; i < len; i++) {
        for (var j = 0; j < len - 1 - i; j++) {
            if (arr[j] > arr[j+1]) {        
                var temp = arr[j+1];        
                arr[j+1] = arr[j];
                arr[j] = temp;
            }
        }
    }
    return arr;
},
    drawParam(){
        let myChart = this.$echarts.init(document.getElementById('myChartparam'));
          
        //取到数据,排序
        console.log(4444,this.dataOrigin.tgo);
        var aaa=this.bubbleSort( this.dataOrigin.tgo);
        //定位当前项目参数所在的yAxis值
        if(this.selected0=='0'){
            var theParam1=aaa.indexOf(18.2);
            }
        else {
            var theParam1=aaa.length-1-aaa.indexOf(18.2);
            };

        var dataY=[];
        for(var i=0;i<aaa.length;i++){
          dataY.push(i)
        };
        console.log(this.selected0);
        //倒序
        if(1==this.selected0){
          aaa.reverse();
          };
        var dataParam0=[];
        for(var i=0;i<aaa.length;i++){
          dataParam0.push([0,i,aaa[i]])
        };

        var bbb=this.bubbleSort( this.dataOrigin.tg);
        console.log(this.selected1);
        //倒序
        if(1==this.selected1){
          bbb.reverse();
          };
        var dataParam1=[];
        for(var i=0;i<bbb.length;i++){
          dataParam1.push([0,i,bbb[i]])
        };

        var ccc=this.bubbleSort( this.dataOrigin.a);
        console.log(this.selected2);
        //倒序
        if(1==this.selected2){
          ccc.reverse();
          };
        var dataParam2=[];
        for(var i=0;i<ccc.length;i++){
          dataParam2.push([0,i,ccc[i]])
        };

        var ddd=this.bubbleSort( this.dataOrigin.n);;
        console.log(this.selected3);
        //倒序
        if(1==this.selected3){
          ddd.reverse();
          };
        var dataParam3=[];
        for(var i=0;i<ddd.length;i++){
          dataParam3.push([0,i,ddd[i]])
        };

        var eee=this.bubbleSort( this.dataOrigin.cop);
        console.log(this.selected4);
        //倒序
