          eee.reverse();
          };
        var dataParam4=[];
        for(var i=0;i<eee.length;i++){
          dataParam4.push([0,i,eee[i]])
        };

        var fff=this.bubbleSort( this.dataOrigin.eer);
        console.log(this.selected5);
        //倒序
        if(1==this.selected5){
          fff.reverse();
          };
        var dataParam5=[];
        for(var i=0;i<fff.length;i++){
          dataParam5.push([0,i,fff[i]])
        };
    

        myChart.setOption({
         
        visualMap:{
        calculable: 'true',
        min:'0' ,
        max: '20',
        show:false
    },
    grid: [
        {left:'5%',top:'10px',width: '11%'},
        {left:'20%', top:'10px',width: '11%'},
        { left:'35%',top:'10px',width: '11%'},
        { left:'50%',top:'10px',width: '11%'},
        { left:'65%',top:'10px',width: '11%'},
        {left:'80%',top:'10px', width: '11%'},
    ],
    series: [{
        name:'Ⅰ',
        type: 'heatmap',
        xAxisIndex: 0,
        yAxisIndex: 0,
        data:dataParam0,
         markPoint: {
            symbol:'rect',
            itemStyle:{
                normal:{
                    color:'skyblue'
                }
            },
            data:[{
                name:'theProject',
                xAxis:1,
                yAxis:theParam1
            }
            ]
        },
        label: {
            normal: {
                show: true,
                position: 'insideRight'
            }
        },
        itemStyle:{
            normal:{
                color:'rgb(128,128,128)',
                borderWidth:'3',
            }
        }
    },
    {
        name:'Ⅱ',
        type: 'heatmap',
        xAxisIndex: 1,
        yAxisIndex: 1,
        data:dataParam1,
        label: {
            normal: {
                show: true,
                position: 'insideRight'
            }
        },
        itemStyle:{
            normal:{
                color:'rgb(128,128,128)',
                borderWidth:'3',
            }
        }
    },
    {
        name:'Ⅲ',
        type: 'heatmap',
        xAxisIndex: 2,
        yAxisIndex: 2,
        data:dataParam2,
        label: {
            normal: {
