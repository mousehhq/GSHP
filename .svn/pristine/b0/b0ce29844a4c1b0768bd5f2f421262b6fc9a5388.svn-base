                position: 'insideRight'
            }
        },
        itemStyle:{
            normal:{
                color:'rgb(128,128,128)',
                borderWidth:'3',
            }
        }
    },
    {
        name:'Ⅳ',
        type: 'heatmap',
        xAxisIndex: 3,
        yAxisIndex: 3,
        data:dataParam3,
        label: {
            normal: {
                show: true,
                position: 'insideRight'
            }
        },
        itemStyle:{
            normal:{
                color:'rgb(128,128,128)',
                borderWidth:'3',
            }
        }
    },
    {
        name:'Ⅴ',
        type: 'heatmap',
        xAxisIndex: 4,
