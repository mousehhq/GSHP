<script>
export default {
  data () {
    return {
     dataOrigin:{
     },
     selected0:'1',
     options0:[
       {text:'降序',value:'0'},
       {text:'升序',value:'1'}
     ],
     
     selected1:'0',
     options1:[
       {text:'降序',value:'0'},
       {text:'升序',value:'1'}
     ],
     
     selected2:'0',
     options2:[
       {text:'降序',value:'0'},
       {text:'升序',value:'1'}
     ],
     
