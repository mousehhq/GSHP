                borderWidth:'3',
            }
        }
    },
    {
        name:'Ⅵ',
        type: 'heatmap',
        xAxisIndex: 5,
        yAxisIndex: 5,
        data:dataParam5,
        label: {
            normal: {
                show: true,
                position: 'insideRight'
            }
        },
        itemStyle:{
            normal:{
                color:'rgb(128,128,128)',
                borderWidth:'3',
            }
        }
    }],
    xAxis: [{
        gridIndex: 0,
        show:true,
        data: ['tg'],
        nameTextStyle:{
          fontSize:33,
        },
        boundaryGap: false,
        type: "category",
        axisLine:{
            show:false,
        },
        axisTick:{
            show:false
        }},
        {
        gridIndex: 1,
