<script>
    import headTop from '../../Header.vue'
    import footerBottom from '../../Footer.vue'
    import topNav from '../../TopNav.vue'
    import projectList from './ProjectList.vue'
    import charts from './Charts.vue'

    export default {
        data() {
            return {
                id: '',
                project: {},
                totalCnt:'',
                // season: 0
                // mark: true
            }
        },
        components: {
            headTop,
            footerBottom,
            topNav,
            projectList,
            charts
            // paramMark,
            // eerparamMark
        },

        watch: {
            '$route'(to, from){
                this.getItem();
            }
        },

        created() {
            this.id = this.$route.query.id;
            this.getItem();
        },

        methods: {
            getTotalCnt(totalCnt){
                this.totalCnt = totalCnt ;
            },
            getItem(){

                let self = this;
                let url = GSHP_SERVER_ENDPOINT + '/project/projectInfo';
                self.$http.get(url, {
                    params: {
                        id: self.$route.query.id
                    }
                }).then((response) => {
                    let data = response.data;
                    let obj = {
                        name: data.project_name,
                        location: data.position,
                        beginTime: data.begin_time,
                        area: data.area,
                        type: data.type
                    };
                    this.project = obj;
                });

            },

            editClick(){
                this.$refs.projectlist.projectAdd(true);
            },

            deleteClick() {
                var self = this;
                this.$confirm('此操作将永久删除该项目以及该项目的所有参数信息, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    var url = GSHP_SERVER_ENDPOINT + '/projects?id=' + self.$route.query.id;
                    self.$http.delete(url)
                        .then(function (response) {
                            if (response.status === 200) {
                                self.$message({
                                    type: 'success',
                                    message: '删除项目"' + self.project.name + '"成功!'
                                });
                                self.$router.push({path: '/home'});
                            }
                        })
                        .catch(function (error) {
                            self.$message({
                                type: 'error',
                                message: '删除失败!'
                            });
                        });
                }).catch(() => {
                    this.$message({
                        type: 'info',
                        message: '已取消删除'
                    });
                });
            },

            /*renderHeader1(createElement, {column, $index}) {
